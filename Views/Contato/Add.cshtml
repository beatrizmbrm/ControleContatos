<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Add.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleContatos.styles.css" asp-append-version="true" />
</head>

<body>
    @{
        ViewData["Title"] = "Adicione seu contato";
    }
    <div class="text-center">
        <h1 class="display-4">
            Adicione seu contato
        </h1>

        <form action="/Contato/Add" method="post">
            <div class="conteudo">
                <div class="form_contato">
                    <input type="text" name="Nome" class="nome" placeholder="Nome" required>
                </div>

                <div class="form_contato">
                    <input type="tel" name="Telefone" class="telefone" placeholder="Telefone" required>
                </div>

                <div class="form_contato">
                    <input type="email" name="Email" class="email" placeholder="E-mail" required>
                </div>

                <button type="submit" role="button">Adicionar</button>
                <a class="btn_voltar" href="/Contato/Index">Voltar</a>
            </div>
        </form>
    </div>

</body>
</html>
